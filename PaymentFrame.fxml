        <Label layoutX="38.0" layoutY="136.0" text="Card Holder:" />
        <TextField fx:id="cardHolderField" layoutX="168.0" layoutY="136.0" prefWidth="200" />

        <Label layoutX="38.0" layoutY="180.0" text="CVV:" />
        <TextField fx:id="cvvField" layoutX="168.0" layoutY="180.0" prefWidth="100" />

