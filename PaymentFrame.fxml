<AnchorPane prefHeight="453.0" prefWidth="533.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java.PaymentController">
    <children>
        <Label layoutX="147.0" layoutY="30.0" text="Payment Information">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>

