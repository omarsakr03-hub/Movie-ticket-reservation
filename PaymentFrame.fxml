      <Label fx:id="messageLabel2" layoutX="168.0" layoutY="162.0" prefHeight="18.0" prefWidth="200.0" textFill="red" />
      <Label fx:id="messageLabel3" layoutX="167.0" layoutY="206.0" prefHeight="18.0" prefWidth="200.0" textFill="red" />
      <Label fx:id="messageLabel4" layoutX="168.0" layoutY="253.0" prefHeight="18.0" prefWidth="250.0" textFill="red" />
      <Label fx:id="messageLabel" layoutX="38.0" layoutY="318.0" prefHeight="18.0" prefWidth="382.0" textFill="#00ff23" />
    </children>
</AnchorPane>
